<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="valuation_cron" model="ir.cron">
            <field name="name">Portfolio Extras: Rebuild product valuations</field>
            <field name="model_id" ref="model_portfolio_extras_valuation"/>
            <field name="state">code</field>
            <field name="code">model.make_valuations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
        </record>


        <record id="portfolio_report_cron" model="ir.cron">
            <field name="name">Portfolio Extras: Rebuild portfolio reports</field>
            <field name="model_id" ref="model_portfolio_extras_portfolio_report_wizard"/>
            <field name="state">code</field>
            <field name="code">model.compute_report()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
